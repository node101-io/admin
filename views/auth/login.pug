extends ../partials/head
block content
  .all-wrapper
    form.login-form#form
      h1.general-title= __('Login')
      h2.general-text= __('Login to node101 admin page.')
      input.general-input#email(type='email' name='new-password' placeholder=__('Email') autofocus autocomplete='new-password')
      input.general-input#password(type='password' name='new-password' placeholder=__('Password') autocomplete='new-password')
      button.general-button= __('Log In')
      .general-error#error(style='display: none;')
